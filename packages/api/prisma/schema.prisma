generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  password     String
  picture      String?
  picture_name String?
  role         Role     @default(WRITER)
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt
  posts        Post[]

  @@map("users")
}

model Post {
  id         String   @id @default(uuid())
  title      String
  title_slug String
  content    String
  published  Boolean  @default(false)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  author     User     @relation(fields: [author_id], references: [id])
  author_id   String

  @@map("posts")
}

enum Role {
  WRITER
  ADMIN
}
